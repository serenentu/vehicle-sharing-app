<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">
    
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.serenentu.vehiclesharing.WelcomeFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.serenentu.vehiclesharing.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.serenentu.vehiclesharing.SignupFragment"
        android:label="Sign Up">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.serenentu.vehiclesharing.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_postTripFragment"
            app:destination="@id/postTripFragment" />
        <action
            android:id="@+id/action_homeFragment_to_browseTripsFragment"
            app:destination="@id/browseTripsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.serenentu.vehiclesharing.HistoryFragment"
        android:label="History">
        <action
            android:id="@+id/action_historyFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    
    <fragment
        android:id="@+id/browseTripsFragment"
        android:name="com.serenentu.vehiclesharing.BrowseTripsFragment"
        android:label="Browse Trips" />
    
    <fragment
        android:id="@+id/postTripFragment"
        android:name="com.serenentu.vehiclesharing.PostTripFragment"
        android:label="Post Trip" />
    
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.serenentu.vehiclesharing.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="false" />
    </fragment>
        
</navigation>
