<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Trip Summary -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— Trip Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTripSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NTU â†’ Tampines\nDec 15, 10:00 AM"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDriverInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver: John Tan"
                android:textSize="13sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Price Breakdown -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Price"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPriceBreakdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price per seat: $5.00\nTotal: $5.00"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Payment Method -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’³ Payment Method"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rgPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’µ Cash (Pay driver directly)"
                    android:textSize="14sp"
                    android:checked="true"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rbPayNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± PayNow (Pay driver directly)"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rbCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³ Card/Bank Transfer"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Note -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â„¹ï¸ Note: Payment is made directly to the driver. This is a booking confirmation."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking" />

    </LinearLayout>

</LinearLayout>
