<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Gradient -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_gradient_primary"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Profile Avatar -->
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_circle_primary"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            app:tint="@color/text_white"
            android:padding="24dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/profile_picture" />

        <!-- Change Picture Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChangePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="@color/text_white"
            app:backgroundTint="@color/accent"
            app:fabSize="mini"
            android:layout_marginStart="70dp"
            android:layout_marginTop="110dp"
            android:elevation="6dp"
            app:layout_constraintStart_toStartOf="@id/ivProfilePicture"
            app:layout_constraintTop_toTopOf="@id/ivProfilePicture"
            android:contentDescription="@string/change_profile_picture" />

        <!-- User Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="90dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="@id/headerBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="60dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_placeholder"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_email_placeholder"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preferences Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardUserInfo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preferences"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_preference"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgGenderPreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbNoPreference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_preference"
                        android:textColor="@color/text_primary"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbSameGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/same_gender_only"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ride_preferences"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/cbNoSmokingProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefer_no_smoking"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/cbNoPetsProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefer_no_pets"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/cbMusicProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enjoy_music_during_ride"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <CheckBox
                    android:id="@+id/cbQuietRideProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefer_quiet_rides"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- NTU Profile Badges Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNTUBadges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardPreferences">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ntu_profile_badges"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilHallResident"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hall_resident_optional"
                    android:layout_marginBottom="12dp">

                    <AutoCompleteTextView
                        android:id="@+id/etHallResident"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/hall_resident_optional"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilClubMember"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/club_member_optional"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etClubMember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/club_member_optional"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCourseCohort"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_year_optional"
                    android:layout_marginBottom="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/etCourseCohort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/course_year_optional"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Emergency Contact Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF3E0"
            app:layout_constraintTop_toBottomOf="@id/cardNTUBadges">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_contact"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ntu_security_hotline"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnEmergencyCall"
                    style="@style/Widget.VehicleSharing.Button.Outlined"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/call_ntu_security"
                    android:textColor="#FF6F00"
                    android:strokeColor="#FF6F00" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardEmergency">

            <Button
                android:id="@+id/btnSaveProfile"
                style="@style/Widget.VehicleSharing.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/save_preferences"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnLogout"
                style="@style/Widget.VehicleSharing.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/logout"
                android:textColor="@color/error"
                android:strokeColor="@color/error" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
